<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
        </encoder>
    </appender>

    <logger name="io.github.poshjosh.ratelimiter.web.core" level="debug"/>
    <!--    <logger name="io.github.poshjosh.ratelimiter.bandwidths.DefaultRateToBandwidthConverter" level="trace"/>-->
    <!--    <logger name="io.github.poshjosh.ratelimiter.matcher.DefaultMatchContext" level="trace"/>-->
    <!--    <logger name="io.github.poshjosh.ratelimiter.NodeRateLimiter" level="trace"/>-->
<!--    <logger name="io.github.poshjosh.ratelimiter.web.core.DefaultWebExpressionMatcher" level="trace"/>-->

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>